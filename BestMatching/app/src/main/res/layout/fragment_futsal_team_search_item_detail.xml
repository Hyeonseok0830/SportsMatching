<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_shape"
            android:gravity="top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/grey"
                        android:text="팀이름"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="40dp"
                        android:src="@color/colorAccent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/grey"
                        android:text="대표ID"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_master_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="40dp"
                        android:src="@color/colorAccent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"
                        android:text="대표번호"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"
                        android:text="활동지역"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_locaion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="30dp"
                        android:src="@color/colorAccent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"
                        android:text="활동요일"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_week"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"
                        android:text="평균연령"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent"
                        android:text="팀소개"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_team_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="left"
                        android:paddingLeft="40dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이전" />

            <Button
                android:id="@+id/team_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="가입신청" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>